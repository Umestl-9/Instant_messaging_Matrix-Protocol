<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="true"
    android:padding="16dp"
    android:alpha=".6"
    android:background="@color/black"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_gallery"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="Photo Library"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textcolor_dark"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/top_rounded_bg"
            />

        <View style="@style/BottomDialogButtonsSeparator" />

        <TextView
            android:id="@+id/tv_camera"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="Take Photo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textcolor_dark"
            android:fontFamily="@font/poppins_medium"
            android:background="@color/white"
            />

        <View style="@style/BottomDialogButtonsSeparator" />

        <TextView
            android:id="@+id/tv_delete_profile_photo"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="Delete Profile Photo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textcolor_dark"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/bottom_round_design"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel_dialog"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/textcolor_dark"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/cancel_button_shape"
        android:text="Cancel" />

</LinearLayout>
