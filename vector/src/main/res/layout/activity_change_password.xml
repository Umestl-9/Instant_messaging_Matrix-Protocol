<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_close_change_pass"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="18dp"
            android:src="@drawable/ic_crossed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Change Password"
            android:textColor="@color/textcolor_dark"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_header"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/white_rounded_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Old Password"
                android:textColor="@color/grey_color"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_oldpass"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_toLeftOf="@+id/img_oldpass"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Old Password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="#E4E4E4"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_oldpass"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_eye" />
            </RelativeLayout>


            <View
                android:layout_marginTop="5dp"
                android:background="@color/grey_light0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="New Password"
                android:textColor="@color/grey_color"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_newpass"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_toLeftOf="@+id/img_newpass"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="#E4E4E4"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_newpass"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_eye" />
            </RelativeLayout>

            <View
                android:layout_marginTop="5dp"
                android:background="@color/grey_light0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Confirm New Password"
                android:textColor="@color/grey_color"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_repass"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_toLeftOf="@+id/img_renewpass"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Confirm New Password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="#E4E4E4"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_renewpass"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_eye" />
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/grey_light0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottombar"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_cancel"
                android:gravity="center"
                android:text="Cancel"
                android:background="@drawable/grey_rectangle_bg"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="0dp"
                android:layout_height="52dp"/>

            <TextView
                android:id="@+id/tv_save"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Save"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="8dp"
                android:background="@drawable/accent_color_rounded_bg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="52dp"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
