<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_friend_avtar"
        android:src="@drawable/avtar"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="7dp"
        android:gravity="center|left"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ll_req_accept_and_decline"
        android:layout_toRightOf="@+id/iv_friend_avtar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_friend_name"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:text="Andrew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_message"
            android:fontFamily="@font/ubuntu_regular"
            android:text="you sent a friend request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_req_accept_and_decline"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cancel_request"
            android:padding="14dp"
            android:src="@drawable/ic_cross"
            android:background="@drawable/circle_grey_bg"
            android:layout_width="38dp"
            android:layout_height="38dp"/>

        <TextView
            android:id="@+id/tv_ispending"
            android:background="@drawable/grey_line_bg_with_stroke"
            android:text="Pending"
            android:layout_marginLeft="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="36dp"/>

        <ImageView
            android:id="@+id/iv_accept_request"
            android:padding="14dp"
            android:src="@drawable/ic_completed_status"
            android:layout_marginLeft="8dp"
            android:background="@drawable/circle_dark_red_bg"
            android:layout_width="38dp"
            android:layout_height="38dp"/>

    </LinearLayout>

</RelativeLayout>
