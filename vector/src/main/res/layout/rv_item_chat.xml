<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <View
        android:layout_above="@+id/ll_"
        android:background="@color/grey_light0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/avtar" />

    <LinearLayout
        android:id="@+id/ll_"
        android:layout_marginLeft="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="7dp"
        android:gravity="center|left"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_profile_image"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Roadies"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/ubuntu_regular"
                android:text="11.11 am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_message"
            android:ellipsize="end"
            android:maxLines="2"
            android:fontFamily="@font/ubuntu_regular"
            android:text="John: lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>