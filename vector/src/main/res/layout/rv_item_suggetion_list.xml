<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp" />

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="7dp"
        android:gravity="center|left"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ll_req_accept_and_decline"
        android:layout_toRightOf="@+id/iv_profile_pic"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_friend_name"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:text="Andrew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_mutual"
            android:fontFamily="@font/ubuntu_regular"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_req_accept_and_decline"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_add_frnd_request"
            android:background="@drawable/red_rounded_bg"
            android:text="Add"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="36dp"/>


    </LinearLayout>

</RelativeLayout>
